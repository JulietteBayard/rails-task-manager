<%= form_for @task do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control'%>
</div>

  <br>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <br>
</div>

<div class="form-group">
  <%= f.radio_button :completed, true, :checked => true %>
  <%= label :completed_true, 'completed' %>
  <%= f.radio_button :completed, false %>
  <%= label :completed_false, 'not completed yet' %>
</div>


  <br>

  <%= f.submit class: 'btn btn-primary'%>
<% end %>

