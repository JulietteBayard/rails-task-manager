<h1>My tasks</h1>
<ul style="list-style-type: none;">
<% @tasks.each do |task| %>
  <%= link_to(task_path(task)) do %>
    <li>
    <input type="checkbox" <%= task.completed ? "checked" : "" %>>
    <label><%= task.title %></label>
    </li>
  <% end %>
<% end %>
</ul>

<div>
<%= link_to "Add a new task", new_path %>
</div>
